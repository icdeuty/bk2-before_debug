<table class="table">
	<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>

	<tr>
		<th>follows</th>
		<td><%= link_to user_followings_path(current_user) do %>
			<%= user.followings.count %>
			<% end %>
		</td>
	</tr>

	<tr>
		<th>followers</th>
		<td>
			<%= link_to user_followers_path(current_user) do %>
			<%= user.followers.count %>
			<% end %>
		</td>
	</tr>

</table>

<div class="row">
	<%= link_to '', edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>
</div>